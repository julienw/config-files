#/bin/bash -e

inputFile="$1"

FPS=${FPS:-15}
WIDTH="min(${WIDTH:-1348}\,iw)"
tmpfile=`mktemp gifify-XXXXXXXX.png`

#Generate palette for better quality
ffmpeg -i "$inputFile" -vf fps=$FPS,scale=$WIDTH:-1:flags=lanczos,palettegen -y "$tmpfile"

#Generate gif using palette
ffmpeg -i "$inputFile" -i "$tmpfile" -loop 0 -filter_complex "fps=$FPS,scale=$WIDTH:-1:flags=lanczos[x];[x][1:v]paletteuse" "$inputFile.gif"

rm "$tmpfile"
